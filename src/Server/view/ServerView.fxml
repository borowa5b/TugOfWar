<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Server.view.ServerViewController">
    <children>
        <BorderPane prefHeight="300.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="startServerButton" mnemonicParsing="false" onMouseClicked="#startServer" text="Start server" />
                        <Button fx:id="stopServerButton" mnemonicParsing="false" onMouseClicked="#stopServer" text="Stop server" />
                    </children>
                </HBox>
            </top>
         <center>
                    <TextArea fx:id="serverLog" editable="false" prefHeight="200.0" prefWidth="382.0" wrapText="true" BorderPane.alignment="CENTER" />
         </center>
        </BorderPane>
    </children>
</AnchorPane>
